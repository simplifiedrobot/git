<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zdy="http://schemas.android.com/apk/res/com.example.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        style="@style/TitleStyle"
        android:text="设置中心"
        />
    
  <view.settingItemView
      android:id="@+id/siv_update"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
       zdy:desc_off="自动更新已关闭"
        zdy:desc_on="自动更新已开启"
        zdy:title="自动更新设置"
    />
  
      <view.settingItemView
      android:id="@+id/siv_address"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
     zdy:desc_off="来电归属显示已关闭"
        zdy:desc_on="来电归属显示已开启"
        zdy:title="来电归属显示"
    />
 <view.settingclickView
      android:id="@+id/siv_addressStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    />
  <view.settingclickView
      android:id="@+id/siv_ad_location"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    />
  <view.settingItemView
      android:id="@+id/siv_safecall"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
       zdy:desc_off="黑名单拦截未开启"
        zdy:desc_on="黑名单拦截已开启"
        zdy:title="黑名单拦截"
    />
   
      <view.settingItemView
      android:id="@+id/siv_dogwatch"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
     zdy:desc_off="看门狗已关闭"
        zdy:desc_on="看门狗已开启"
        zdy:title="看门狗"
    />
  

</LinearLayout>